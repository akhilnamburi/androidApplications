<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icecream"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:paddingStart="35dp"
        android:paddingLeft="35dp"
        android:text="@string/choose_the_ice_cream_type_of_cone_and_toppings"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/xmlSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@color/colorAccent"
        android:text="@string/xmlLabel"
        android:textColor="@android:color/background_light" />

    <Spinner
        android:id="@+id/xmlspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/classSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/colorAccent"
        android:text="@string/classLabel"
        android:textColor="@android:color/background_light" />

    <Spinner
        android:id="@+id/classspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/listSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/colorAccent"
        android:text="@string/listLabel"
        android:textColor="@android:color/background_light" />

    <Spinner
        android:id="@+id/listspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>